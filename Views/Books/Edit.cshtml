@model FinalProject.Models.Book
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="backgroundImage">
    <h1 class="text-md-left p-4" style="color:darkslateblue; margin-left:115px;">Edit Book</h1>   
    <form method="post" class="container p-md-5
          justify-content-center 
          align-items-center 
          font-weight-bold w-75 
          rounded bg-white"style=" border: 1px solid black;" 
          asp-action="Edit">
       
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row ml-2">
                <div class="col-4">
                    <label asp-for="Title" class="col-form-label"></label>
                </div>
                <div class="col-7">
                    <input asp-for="Title" class="form-control" />
                </div>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group row ml-2">
                <div class="col-4">
                    <label asp-for="Authors" class="col-form-label"></label>
                </div>
                <div class="col-7">
                    <input asp-for="Authors" class="form-control" />
                </div>
                <span asp-validation-for="Authors" class="text-danger"></span>
            </div>
            <div class="form-group row ml-2">
                <div class="col-4">
                    <label asp-for="Status" class="col-form-label"></label>
                </div>
                <div class="col-7">
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<Book.EStatus>()" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row ml-2">
                <div class="col-4">
                    <label asp-for="CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-7">
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>
            </div>
            <div class="form-group row ml-2">
                <div class="col-7 offset-4">
                    <partial name="_EditAndBackTolistButton" />
                </div>
            </div>
        
    </form>
    </body>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
