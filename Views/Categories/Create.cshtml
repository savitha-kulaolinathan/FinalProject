@model FinalProject.Models.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body class="backgroundImage">
    <h2 class="text-info text-center pb-4">Create Category</h2>
    <form method="post" asp-action="Create">
        <div class="container d-md-block justify-content-center align-content-center bg-white  shadow m-md-5 p-md-5 w-75">
            <partial name="_StatusMessage" model="Model.StatusMessage" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Category.Name" class="col-form-label"></label>
                </div>
                <div class="col-9">
                    <input asp-for="Category.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-9 offset-2">
                    <partial name="_CreateAndBackButtonView" />
                </div>
            </div>

        </div>
    </form>

</body>





    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
