@model FinalProject.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="backgroundImage">
    <div class="container bg-light text-center"
         style=" margin-top:80px;
                border:2px solid black;
                width:450px; border-radius:15px;">
        <h1 class="font-weight-bold font-italic" style="color:darkblue">Delete</h1>

        <h3>Are you sure you want to delete this category?</h3>       
            <div class="justify-content-md-center align-content-center">
               
                <p class="text-center font-weight-bold" style="font-family:'Yu Gothic';">
                    @Html.DisplayFor(model => model.Name)
                </p>
            </div>

            <form asp-action="Delete" class="d-flex justify-content-center align-content-center p-5">
                <input type="hidden" asp-for="Id" />
                <div class="mx-5">
                    <input type="submit" value="Delete" class="btn btn-danger mr-4" />
                    <a asp-action="Index" class="btn btn-success text-white">Back to List</a>
                </div>
               
            </form>
        </div>

    </body>